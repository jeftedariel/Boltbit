<style>
	#background-image {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(80px);
		object-fit: cover;
	}

	#landing-container {
		font-family: "Inter", "Roboto", "Helvetica Neue", "Arial Nova",
			"Nimbus Sans", Arial, sans-serif;
		height: 100vh;
		color: #f5f5f5;
		background-color: #1e1e1e;
	}

	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	#hero-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		padding-top: 4rem;
	}

	@keyframes shadowTransition {
		0% {
			filter: drop-shadow(0 0 80px rgb(255, 202, 28))
				drop-shadow(0 0 30px rgba(232, 255, 28, 0.8));
		}
		25% {
			filter: drop-shadow(0 0 80px rgb(255, 138, 28))
				drop-shadow(0 0 30px rgba(187, 255, 28, 0.8));
		}
		50% {
			filter: drop-shadow(0 0 80px rgb(255, 240, 28))
				drop-shadow(0 0 30px rgba(255, 213, 28, 0.8));
		}
		75% {
			filter: drop-shadow(0 0 80px rgb(194, 255, 28))
				drop-shadow(0 0 30px rgba(255, 213, 28, 0.8));
		}
		100% {
			filter: drop-shadow(0 0 80px rgb(240, 255, 28))
				drop-shadow(0 0 30px rgba(240, 255, 28, 0.8));
		}
	}

	.logo-container {
		margin-bottom: 2rem;
		animation: shadowTransition 4s infinite;
	}

	.logo-container img {
		display: block; /* Esto elimina cualquier espacio extra debajo de la imagen */
	}

	.hero-content {
		max-width: 800px;
	}

	h1 {
		font-size: 2.5rem;
		line-height: 1.2;
		margin-bottom: 1.5rem;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
	}

	.hero-description {
		font-size: 1.25rem;
		line-height: 1.6;
		color: #d1d1d1;
		margin-bottom: 2.5rem;
	}

	#cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.primary-button {
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		color: white;
		padding: 0.875rem 1.5rem;
		border-radius: 10px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
		box-shadow: 0 4px 12px rgba(50, 69, 255, 0.25);
	}

	.primary-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 16px rgba(50, 69, 255, 0.35);
	}

	.secondary-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #f5f5f5;
		padding: 0.875rem 1.5rem;
		border-radius: 10px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s ease;
		background: rgba(60, 60, 60, 0.7);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(80, 80, 80, 0.3);
	}

	.secondary-button:hover {
		background: rgba(70, 70, 70, 0.9);
	}

	#coming-soon {
		margin: 2rem 0;
		display: flex;
		justify-content: center;
	}

	.notification-card {
		display: flex;
		gap: 1.5rem;
		background: rgba(40, 40, 40, 0.8);
		backdrop-filter: blur(20px);
		border-radius: 16px;
		padding: 2rem;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
		max-width: 800px;
		width: 100%;
	}

	.notification-icon {
		font-size: 2.5rem;
	}

	.notification-content {
		flex: 1;
	}

	.notification-content h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: #f5f5f5;
	}

	.notification-content p {
		color: #d1d1d1;
		margin-bottom: 1.5rem;
		line-height: 1.6;
	}

	#subscribe-form {
		display: flex;
		gap: 0.5rem;
	}

	#subscribe-form input {
		flex: 1;
		padding: 0.75rem 1rem;
		border: 1px solid #444;
		border-radius: 8px;
		background-color: #333;
		color: #f5f5f5;
		font-family: inherit;
	}

	#subscribe-form input::placeholder {
		color: #999;
	}

	#subscribe-form button {
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		color: white;
		border: none;
		border-radius: 8px;
		padding: 0.75rem 1.25rem;
		cursor: pointer;
		font-weight: 600;
		font-family: inherit;
	}

	footer {
		padding-top: 2rem;
		text-align: center;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: rgba(60, 60, 60, 0.7);
		transition: all 0.2s ease;
	}

	.social-links a:hover {
		background: rgba(80, 80, 80, 0.9);
		transform: translateY(-2px);
	}

	.copyright {
		color: #999;
		font-size: 0.875rem;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}

		.hero-description {
			font-size: 1.125rem;
		}

		.notification-card {
			flex-direction: column;
			padding: 1.5rem;
		}

		#subscribe-form {
			flex-direction: column;
		}

		.notification-icon {
			font-size: 2rem;
		}
	}

	@media (max-width: 480px) {
		h1 {
			font-size: 1.75rem;
		}

		#hero-section {
			padding-top: 2rem;
		}

		#cta-buttons {
			flex-direction: column;
			width: 100%;
		}

		.primary-button,
		.secondary-button {
			width: 100%;
			text-align: center;
			justify-content: center;
		}
	}
</style>
